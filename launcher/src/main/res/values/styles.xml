<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomeDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CommonEditText" parent="BaseText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#ababab</item>
    </style>


    <style name="CommonVerticalItem">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:padding">@dimen/common_box_padding</item>
        <item name="android:layout_marginTop">@dimen/common_vertical_item_spacing_medium</item>
    </style>

    <!--登录界面的输入框样式-->
    <style name="LoginInputBox" parent="CommonVerticalItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#ababab</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_input_box_bg</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--用户中心三个Tab按钮样式-->
    <style name="UserCenterTabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_user_center_radio_text</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!--程序中用的对话框的样式-->
    <style name="DialogAlertButton" parent="CommonVerticalItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="DialogDebugButton" parent="CommonVerticalItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_negative_btn_text</item>
    </style>

    <style name="DialogIpSetupEdit" parent="CommonVerticalItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_input_box_bg</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">#282828</item>
    </style>

</resources>