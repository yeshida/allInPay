<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/user_center_vertical_margin"
        android:layout_marginLeft="@dimen/user_center_horizontal_margin"
        android:padding="20dp"
        android:layout_marginRight="@dimen/user_center_horizontal_margin"
        android:layout_marginTop="@dimen/user_center_vertical_margin"
        android:background="@drawable/user_center_oper_list_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/BaseText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="用户名"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                style="@style/BaseText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="操作员号"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                style="@style/BaseText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="手机号"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                style="@style/BaseText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="权限"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_divider_size"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#a9a9a9"/>


        <ListView
            android:listSelector="@null"
            android:cacheColorHint="@color/transparent"
            android:id="@+id/oper_list_v"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"/>
    </LinearLayout>


</FrameLayout>